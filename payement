<!-- وأضف هذا الكود JavaScript في <script> -->
// نسخ عناوين العملات المشفرة
function copyCrypto(type) {
    let address = '';
    let currency = '';
    
    if (type === 'btc') {
        address = '1PxVQwUutmSpf6yficDeYM1RCyeCW3tVPC';
        currency = 'Bitcoin';
    } else if (type === 'usdt') {
        address = 'TAThDq59eRyoZL544CEGo6c7yf9JKSoDkM';
        currency = 'USDT (TRC20)';
    }
    
    navigator.clipboard.writeText(address).then(() => {
        alert(`✓ تم نسخ عنوان ${currency}: ${address}`);
    }).catch(err => {
        prompt(`انسخ عنوان ${currency} يدوياً:`, address);
    });
}

// فتح روابط التواصل
document.querySelectorAll('.payment-note a').forEach(link => {
    link.addEventListener('click', function(e) {
        if(this.getAttribute('href').includes('wa.me') || this.getAttribute('href').includes('t.me')) {
            e.preventDefault();
            window.open(this.getAttribute('href'), '_blank');
        }
    });
});
